<form action="/posts/update/<%= @post.id %>" method="post">
    <div class="form-group">
        <label>제목</label>
        <input class="form-control" type="text" name="post_title" value="<%= @post.title %>">
    </div>
    <div class="form-group">
        <label>내용</label>
        <textarea class="form-control" name="post_content" rows="3" ><%= @post.content %></textarea>
    </div><!--<br>-->
    <br>
    <input class= "btn btn-primary btn-sm" type="submit" value="수정완료">
</form>